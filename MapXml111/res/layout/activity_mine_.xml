<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".Mine_Activity" >

    <ImageView
        android:id="@+id/mine_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_header" />

    <RelativeLayout
        android:id="@+id/mine_rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_head"
        android:background="@drawable/wd_08" >

        <ImageView 
            android:id="@+id/mine_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/wd_09" />

        <TextView
            android:id="@+id/mine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:text="煞笔来了"
            android:textColor="#fff" 
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_rr"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wd_01_press" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wd_02_normal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp" >

        <ImageView
            android:id="@+id/mine_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wd_03" />

        <ImageView
            android:id="@+id/mine_img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/mine_img_1"
            android:background="@drawable/wd_04" />

        <ImageView
            android:id="@+id/mine_img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_img_1"
            android:layout_marginTop="2dp"
            android:background="@drawable/wd_05" />

        <ImageView
            android:id="@+id/mine_img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_img_2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/mine_img_3"
            android:background="@drawable/wd_06" />

        <ImageView
            android:id="@+id/mine_img_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_img_3"
            android:layout_marginTop="2dp"
            android:background="@drawable/wd_07" />
    </RelativeLayout>

    <include layout="@layout/menu_right_bottom" />

</RelativeLayout>